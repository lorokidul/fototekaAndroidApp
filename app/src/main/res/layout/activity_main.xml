<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="181dp"
        android:layout_height="124dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="477dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/addDocumentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="callPhotoActivity"
            android:text="@string/addDocumentButtonText" />

        <Button
            android:id="@+id/goToCatalogFromMainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/goToCatalogText" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>